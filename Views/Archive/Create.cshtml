@model kinological_club.Models.ArchiveViewModel

@{
    ViewData["Title"] = "Добавить запись о собаке";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Nickname">Кличка</label>
        <input asp-for="Nickname" class="form-control" />
        <span asp-validation-for="Nickname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="OwnerId">Код хозяина</label>
        <input asp-for="OwnerId" class="form-control" />
        <span asp-validation-for="OwnerId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BirthDate">Дата рождения</label>
        <input asp-for="BirthDate" class="form-control" />
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DeathDate">Дата смерти</label>
        <input asp-for="DeathDate" class="form-control" />
        <span asp-validation-for="DeathDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Gender">Пол</label>
        <select asp-for="Gender" class="form-control">
            <option value="м">м</option>
            <option value="ж">ж</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Breed">Порода</label>
        <input asp-for="Breed" class="form-control" />
        <span asp-validation-for="Breed" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FatherId">Код отца</label>
        <input asp-for="FatherId" class="form-control" />
        <span asp-validation-for="FatherId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MotherId">Код матери</label>
        <input asp-for="MotherId" class="form-control" />
        <span asp-validation-for="MotherId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ExhibitionId">Код выставки</label>
        <input asp-for="ExhibitionId" class="form-control" />
        <span asp-validation-for="ExhibitionId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Создать</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>
