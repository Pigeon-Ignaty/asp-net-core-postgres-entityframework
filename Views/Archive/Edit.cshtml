@model kinological_club.Models.ArchiveViewModel

@{
    ViewData["Title"] = "Редактировать";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Nickname">Кличка</label>
        <input class="form-control" asp-for="Nickname" />
    </div>

    <div class="form-group">
        <label asp-for="OwnerId">Код хозяина</label>
        <input class="form-control" asp-for="OwnerId" />
    </div>

    <div class="form-group">
        <label asp-for="BirthDate">Дата рождения</label>
        <input class="form-control" asp-for="BirthDate" />
    </div>

    <div class="form-group">
        <label asp-for="DeathDate">Дата смерти</label>
        <input class="form-control" asp-for="DeathDate" />
    </div>

    <div class="form-group">
        <label asp-for="Gender">Пол</label>
        <select class="form-control" asp-for="Gender">
            <option value="м">м</option>
            <option value="ж">ж</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="Breed">Порода</label>
        <input class="form-control" asp-for="Breed" />
    </div>

    <div class="form-group">
        <label asp-for="FatherId">Код отца</label>
        <input class="form-control" asp-for="FatherId" />
    </div>

    <div class="form-group">
        <label asp-for="MotherId">Код матери</label>
        <input class="form-control" asp-for="MotherId" />
    </div>

    <div class="form-group">
        <label asp-for="ExhibitionId">Код выставки</label>
        <input class="form-control" asp-for="ExhibitionId" />
    </div>

    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>
