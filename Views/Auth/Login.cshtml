@model kinological_club.Models.AuthViewModel

@{
    ViewData["Title"] = "Вход в аккаунт";
}

<h2 class="text-center mb-4">Вход в аккаунт</h2>

@if (ViewData["ShowErrorMessage"] != null && (bool)ViewData["ShowErrorMessage"])
{
    <div class="alert alert-danger">
        <strong>Ошибка!</strong> Неверное имя пользователя или пароль.
    </div>
}

<form method="post">
    <div class="row justify-content-center">
        <div class="col-sm-6">
            <div class="form-group">
                <label for="username">Имя пользователя:</label>
                <input type="text" id="username" name="Login" class="form-control" />
                @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-sm-6">
            <div class="form-group">
                <label for="password">Пароль:</label>
                <input type="password" id="password" name="Password" class="form-control" />
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-sm-6">
            </br><button type="submit" class="btn btn-primary">Войти</button>
        </div>
    </div>
</form>
