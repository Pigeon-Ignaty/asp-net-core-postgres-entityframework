@model kinological_club.Models.AwardsViewModel

@{
    ViewData["Title"] = "Добавить запись о награде";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post" asp-controller="Awards">

    <div class="form-group">
        <label asp-for="DogId">Собака</label>
        <select asp-for="DogId" class="form-control" asp-items="@ViewBag.DogsList"></select>
        @Html.ValidationMessageFor(model => model.DogId, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label asp-for="Name">Название награды</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateOfReceiving">Дата получения</label>
        <input asp-for="DateOfReceiving" class="form-control" />
        <span asp-validation-for="DateOfReceiving" class="text-danger"></span>
    </div>


    <div class="text-danger">
        @Html.ValidationSummary()
    </div>
    <button type="submit" class="btn btn-primary">Создать</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>