@model kinological_club.Models.AwardsViewModel

@{
    ViewData["Title"] = "Редактировать";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="DogId">Собака</label>
        <select class="form-control" asp-for="DogId" asp-items="@ViewBag.DogsList"></select>
    </div>

    <div class="form-group">
        <label asp-for="Name">Название награды</label>
        <input class="form-control" asp-for="Name" />
    </div>

    <div class="form-group">
        <label asp-for="DateOfReceiving">Дата получения</label>
        <input class="form-control" asp-for="DateOfReceiving" />
    </div>
    <div class="text-danger">
        @Html.ValidationSummary()
    </div>
    
    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>
