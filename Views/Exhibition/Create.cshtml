@model kinological_club.Models.ExhibitionViewModel

@{
    ViewData["Title"] = "Добавить запись о выставке";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post" asp-controller="Exhibition">

    <<div class="form-group">
        <label asp-for="DogId">Собака</label>
        <select asp-for="DogId" class="form-control" asp-items="@ViewBag.DogsList"></select>
        @Html.ValidationMessageFor(model => model.DogId, "", new { @class = "text-danger" })
    </div>


    <div class="form-group">
        <label asp-for="Name">Название выставки</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StartDate">Дата начала выставки</label>
        <input asp-for="StartDate" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndDate">Дата завершения выставки</label>
        <input asp-for="EndDate" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="text-danger">
        @Html.ValidationSummary()
    </div>
    <button type="submit" class="btn btn-primary">Создать</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>