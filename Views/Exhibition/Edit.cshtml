@model kinological_club.Models.ExhibitionViewModel

@{
    ViewData["Title"] = "Редактировать";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="DogId">Код собаки</label>
        <input class="form-control" asp-for="DogId" />
    </div>

    <div class="form-group">
        <label asp-for="Name">Название выставки</label>
        <input class="form-control" asp-for="Name" />
    </div>

    <div class="form-group">
        <label asp-for="StartDate">Дата начала выставки</label>
        <input class="form-control" asp-for="StartDate" />
    </div>

    <div class="form-group">
        <label asp-for="EndDate">Дата завершения выставки</label>
        <input class="form-control" asp-for="EndDate" />
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>
