@model kinological_club.Models.OwnersViewModel

@{
    ViewData["Title"] = "Редактировать";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="OwnerId" />

    <div class="form-group">
        <label asp-for="LastName">Фамилия</label>
        <input class="form-control" asp-for="LastName" />
    </div>

    <div class="form-group">
        <label asp-for="FirstName">Имя</label>
        <input class="form-control" asp-for="FirstName" />
    </div>

    <div class="form-group">
        <label asp-for="MiddleName">Отчество</label>
        <input class="form-control" asp-for="MiddleName" />
    </div>

    <div class="form-group">
        <label asp-for="Address">Адрес места жительства</label>
        <input class="form-control" asp-for="Address" />
    </div>

    <div class="form-group">
        <label asp-for="Phone">Телефон</label>
        <input class="form-control" asp-for="Phone" />
    </div>

   

    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>
