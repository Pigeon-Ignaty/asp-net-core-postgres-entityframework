@model kinological_club.Models.PhoneViewModel

<h2>Форматирование номера телефона</h2>

@using (Html.BeginForm("Index", "Phone", FormMethod.Post))
{
    <div class="form-group">
        <label for="PhoneNumber">Номер телефона:</label>
        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
    </div>

    <br />

    <button type="submit" class="btn btn-primary">Форматировать</button>
}

@if (!string.IsNullOrEmpty(Model.FormattedPhoneNumber))
{
    <div class="mt-3">
        <strong>Отформатированный номер:</strong> @Model.FormattedPhoneNumber
    </div>
}
