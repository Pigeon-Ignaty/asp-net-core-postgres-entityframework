@model kinological_club.Models.SelectionViewModel

<form method="post" action="/Selection/Index">
    <div class="form-group">
        <label for="breed">Порода:</label>
        <input type="text" class="form-control" id="breed" name="breed" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Отправить</button>
    </div>
</form>


@if (Model != null)
{
    <h2>Результаты:</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Идентификатор собаки</th>
                <th>Возраст (в днях)</th>
                <th>Количество наград</th>
                <th>Порода</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.DogId</td>
                <td>@Model.Age</td>
                <td>@Model.AwardsCount</td>
                <td>@Model.Breed</td>
            </tr>
        </tbody>
    </table>
}
